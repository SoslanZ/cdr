#!Z:/usr/local/bin/php
<?php
define('APPPATH', dirname(__FILE__) . '/../protected/');
require_once APPPATH . 'ac/base/ACLoader.php';

$classes_arr = ACLoader::getClassesDir(APPPATH, true);

$classes_arr = str_replace("\\", "/", $classes_arr);
ksort($classes_arr);

$str = "<?php
return array(\n";
foreach ($classes_arr as $key => $value) {
    $str .= "    '{$key}' => '{$value}', \n";
}
$str .= ");";

file_put_contents(APPPATH . 'system/cache/classes.php', $str);
echo "protected/system/cache/classes.php - save \n";

print_r($classes_arr);
